{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "types"]
}
